<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminRegistration">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin Registration"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textAlignment="center"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/uploadimg"
                android:tooltipText="Upload id proof"
                android:id="@+id/uploadImage"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadIdnum"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:inputType="none"
                android:hint="Enter the id proof number"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadName"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter the name"
                android:gravity="start|center_vertical"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadLoc"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter the Address"
                android:gravity="start|center_vertical"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadOrgname"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter organisation name"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadContact"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:inputType="phone"
                android:maxLength="10"
                android:hint="Enter the  contact"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/uploadEmail"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter the email"
                android:gravity="start|center_vertical"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Upload"
                android:id="@+id/uploadButton"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                app:cornerRadius = "20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</ScrollView>