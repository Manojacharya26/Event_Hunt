<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/recCard"
    app:cardCornerRadius="20dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/uploadimg" />


        <TextView
            android:id="@+id/recTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="170dp"
            android:background="@color/white"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recLoc"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            android:layout_below="@id/recTitle"
            android:text="location"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recDate"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recLoc"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            android:drawablePadding="8dp"

            android:text="Date"
            android:textSize="15sp"
            app:drawableStartCompat="@drawable/baseline_event_24" />

        <TextView
            android:id="@+id/recEntry"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="10dp"
            android:text="entry fees"
            android:visibility="invisible"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/recTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_below="@id/recLoc"
            android:background="@color/white"
            android:drawableStart="@drawable/baseline_access_time_24"
            android:text="Time"
            android:drawablePadding="8dp"

            android:textSize="15sp" />

        <TextView
            android:id="@+id/recDesc"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="10dp"
            android:text="description"
            android:visibility="invisible"
            android:maxLines="1"
            android:textSize="10sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
